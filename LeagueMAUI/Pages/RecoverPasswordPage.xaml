<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LeagueMAUI.Pages.RecoverPasswordPage"
             Title="RecoverPasswordPage">
    <Grid RowDefinitions="Auto, Auto, Auto, Auto, *"
   RowSpacing="20"
   Margin="20, 150, 20, 40">
        <Image Grid.Row="0"
        Source="ball.svg"
        Aspect="AspectFit"
        HeightRequest="80"
        WidthRequest="80"/>
        <Label Grid.Row="1"
        Text="Enter your email!"
        TextColor="#343a40"
        FontAttributes="Bold"
        HorizontalOptions="Center"/>

        <Frame Grid.Row="2"
        Padding="15">
            <VerticalStackLayout>
                <Entry Placeholder="Email"
                x:Name="EntEmail"
                TextColor="#343a40"                     
                BackgroundColor="Transparent"
                />
               
            </VerticalStackLayout>
        </Frame>
        <Button Grid.Row="3"
         Text="Recover Password"
         FontSize="16"
         FontAttributes="Bold"
         x:Name="RecoverPassword"
         BackgroundColor="#ff0046"
         Clicked="RecoverPassword_Clicked"/>

    </Grid>
</ContentPage>